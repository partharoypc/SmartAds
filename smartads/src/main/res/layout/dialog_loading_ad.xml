<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingHorizontal="32dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/ad_body"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_loading_gradient"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="48dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorColor="@color/colorPrimary"
                app:indicatorSize="64dp"
                app:trackColor="#F1F5F9"
                app:trackThickness="6dp" />

            <TextView
                android:id="@+id/loading_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="@string/smartads_loading_ad"
                android:textAlignment="center"
                android:textColor="@color/ad_headline"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loading_submessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:alpha="0.8"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:text="@string/smartads_loading_optimizing"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
